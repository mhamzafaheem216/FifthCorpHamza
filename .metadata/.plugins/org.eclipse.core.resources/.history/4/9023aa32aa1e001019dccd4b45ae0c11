package com.fifthcorp.Hamza.controllers;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.fifthcorp.Hamza.entities.Lease;
import com.fifthcorp.Hamza.sevices.LeaseService;

import lombok.RequiredArgsConstructor;

@RestController
@RequestMapping("/hamza/leases")
@RequiredArgsConstructor
public class LeaseController {

    private final LeaseService leaseService;

    @GetMapping
    public List<Lease> getAll() {
        return leaseService.getAllLeases();
    }

    @PostMapping
    public Lease create(@RequestBody Lease lease) {
        return leaseService.createLease(lease);
    }

    @GetMapping("/unit/{unitId}")
    public Lease getByUnit(@PathVariable Long unitId) {
        return leaseService.getLeaseByUnit(unitId);
    }
}

